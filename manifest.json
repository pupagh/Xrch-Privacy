{
  "manifest_version": 2,
  "name": "Xrch Privacy",
  "description": "Make your browsing more private.",
  "version": "1.0.1",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "author": "Xrch",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "webNavigation"
  ],
  "background": {
    "scripts": [
      "data/rules.js",
      "data/context-menu.js"
    ]
  },
  "options_ui": {
    "page": "data/options.html",
    "browser_style": true
  },
  "browser_action": {
    "default_popup": "data/menu/index.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  },
  "chrome_settings_overrides": {
    "search_provider": {
        "favicon_url": "https://w.xrch.rf.gd/favicon.ico",
        "is_default": true,
        "keyword": "xrch.rf.gd",
        "name": "Xrch",
        "search_url": "https://w.xrch.rf.gd/s?q={searchTerms}&p=0"
    }
  }
}